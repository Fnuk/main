<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.istia.groupe.myapplication.Fragment_Plateau"
    android:orientation="vertical"
    android:gravity="center">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BombsCounter"
        android:text="@string/nbBombs"/>
  </LinearLayout>

  <GridView
      android:id="@+id/GridViewDemineur"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="0.5"
      android:stretchMode="columnWidth"
      android:layout_gravity="fill">
  </GridView>
  <!--<GridLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/GridLayoutDemineur"
      android:layout_weight="0.5"
      android:gravity="center">
  </GridLayout>-->

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_weight="1">
    <com.istia.groupe.myapplication.DemineurButton
        android:id="@+id/clickButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hand"/>
    <com.istia.groupe.myapplication.DemineurButton
        android:id="@+id/flagButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flag"/>
    <com.istia.groupe.myapplication.DemineurButton
        android:id="@+id/bombButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/question"/>
  </LinearLayout>

  <!-- TODO: Update blank fragment layout -->


</LinearLayout>
